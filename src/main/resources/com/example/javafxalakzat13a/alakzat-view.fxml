<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" minHeight="397.0" minWidth="530.0" prefHeight="397.0" prefWidth="530.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxalakzat13a.AlakzatController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox maxHeight="250.0" prefHeight="348.0" prefWidth="200">
        <HBox maxHeight="250.0">
            <VBox prefWidth="150">
                <RadioButton fx:id="radioPiros" onAction="#onPirosSelected" text="Piros">
               <toggleGroup>
                  <ToggleGroup fx:id="togglegroup_Szin" />
               </toggleGroup></RadioButton>
                <RadioButton fx:id="radioZold" onAction="#onZoldSelected" toggleGroup="$togglegroup_Szin">Zöld</RadioButton>
                <RadioButton fx:id="radioKek" onAction="#onKekSelected" toggleGroup="$togglegroup_Szin">Kék</RadioButton>
            </VBox>
            <VBox prefWidth="150">
                <RadioButton fx:id="radioNegyzet" onAction="#onNegyzetSelected" text="Négyzet">
               <toggleGroup>
                  <ToggleGroup fx:id="togglegroup_Alak" />
               </toggleGroup></RadioButton>
                <RadioButton fx:id="radioKor" onAction="#onKorSelected" toggleGroup="$togglegroup_Alak">Kör</RadioButton>
                <RadioButton fx:id="radioHaromszog" onAction="#onHaromszogSelected" toggleGroup="$togglegroup_Alak">Háromszög</RadioButton>
            </VBox>
        </HBox>
      <Pane id="pane_Alakzat" fx:id="pane_Alakzat" prefHeight="154.0" prefWidth="200.0">
         <children>
            <ImageView id="imageview_Alakzat" fx:id="imageview_Alakzat" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </Pane>
    </VBox>
    <VBox alignment="TOP_CENTER" prefWidth="200">
      <children>
         <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="270.0">
            <children>
               <Button minWidth="70.0" mnemonicParsing="false" onAction="#onHozzaadClick" text="Hozzáad">
                  <HBox.margin>
                     <Insets bottom="10.0" right="70.0" top="10.0" />
                  </HBox.margin>
               </Button>
               <Button minWidth="70.0" mnemonicParsing="false" text="Töröl">
                  <HBox.margin>
                     <Insets bottom="10.0" left="60.0" top="10.0" />
                  </HBox.margin>
               </Button>
            </children>
         </HBox>
         <ListView id="listview_Listview" fx:id="listview_Listview" prefHeight="268.0" prefWidth="300.0">
            <VBox.margin>
               <Insets bottom="10.0" />
            </VBox.margin>
         </ListView>
         <Button mnemonicParsing="false" text="Mentés" />
      </children></VBox>
</HBox>
